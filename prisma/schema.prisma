// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  idUser     String     @id @default(uuid())
  email      String     @unique
  imgProfile String
  username   String?    @unique
  name       String?
  balances   Balance[]
  movements  Movement[]
}

model Balance {
  idBalance Int    @id @default(autoincrement())
  userId    String @unique
  month     Int
  year      Int
  earnings  Float? // Utiliza Float para representar valores con decimales
  expenses  Float? // Utiliza Float para representar valores con decimales
  User      User?  @relation(fields: [userId], references: [idUser])

  @@unique([userId, month, year], name: "unique_month_year_per_user")
}

model Movement {
  idMovement   String       @id @default(uuid())
  userId       String
  typeId       Int
  createdAt    DateTime     @default(now())
  description  String
  value        Float
  User         User         @relation(fields: [userId], references: [idUser])
  TypeMovement TypeMovement @relation(fields: [typeId], references: [idTypeMovement])
}

model TypeMovement {
  idTypeMovement Int        @id @default(autoincrement())
  description    String
  movements      Movement[]
}
